<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/fragmentBackground"
              android:paddingLeft="@dimen/dialog_horizontal_padding"
              android:paddingRight="@dimen/dialog_horizontal_padding"
              android:paddingTop="@dimen/dialog_vertical_padding"
              android:paddingBottom="@dimen/dialog_vertical_padding"
              tools:showIn="@layout/activity_hunt"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >

        <ImageView android:layout_width="wrap_content"
                   android:background="@color/pokemonBackground"
                   android:id="@+id/hunt_image"
                   android:layout_height="wrap_content"
                   android:scaleY="@dimen/pokemon_image_y_scale"
                   android:scaleX="@dimen/pokemon_image_x_scale"
        />

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
        >

            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/fragmentTextColor"
                      android:id="@+id/hunt_name"
                      android:layout_height="wrap_content"
            />

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/hunt_number"
                      android:textColor="@color/fragmentTextColor"
                      android:layout_height="wrap_content"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
    >

        <TextView android:layout_width="0dp"
                  android:textColor="@color/fragmentTextColor"
                  android:layout_weight="0.5"
                  android:text="@string/game"
                  android:layout_height="wrap_content"
        />

        <Spinner android:layout_width="0dp"
                 android:layout_weight="0.5"
                 android:id="@+id/fragment_game_spinner"
                 android:layout_height="wrap_content"
        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
    >

        <TextView android:layout_width="0dp"
                  android:textColor="@color/fragmentTextColor"
                  android:layout_weight="0.5"
                  android:text="@string/encounters"
                  android:layout_height="wrap_content"
        />

        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:id="@+id/fragment_edit_encounters"
                  android:inputType="number"
        />

    </LinearLayout>

</LinearLayout>