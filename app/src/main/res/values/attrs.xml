<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MainTextView">
        <attr name="textColor" format="color"/>
        <attr name="textAlign" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="textt" format="string|reference"/>

        <attr name="textBoxColor" format="color"/>
        <attr name="textBoxBorderColor" format="color"/>
        <attr name="textBoxBorderWidth" format="float"/>

        <attr name="ImageBackgroundColor" format="color"/>
        <attr name="imageSrc" format="reference"/>

        <attr name="flippedd" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="MainButton">
        <attr name="text" format="string"/>
        <attr name="image" format="reference"/>
        <attr name="flipped" format="boolean"/>
        <attr name="align" format="flags">
            <flag name="horizontalCenter" value="1"/>
            <flag name="verticalCenter" value="2"/>
            <flag name="left" value="4"/>
            <flag name="right" value="8"/>
            <flag name="top" value="16"/>
            <flag name="bottom" value="32"/>
        </attr>
        <attr name="paddingOnLimitation" format="dimension"/>
    </declare-styleable>
</resources>